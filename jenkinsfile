pipeline{
    agent any
    stages{
        stage('terraform init'){
            steps{
                sh "terraform init"
            }
        }

     stage('terraform wait'){
       steps{
          input {
        message 'wait approval'
        ok 'yes/no'
       }
       }
     }

    
     stage('terraform yes plan'){
       steps{
         sh "terraform plan"
       }
     }
   }
 }
