pipeline{
    agent any
    environment {
    PATH = "${PATH}:${getterraformPath()}"
    }
    stages{
        stage('terraform init'){
            steps{
                sh "terraform init"
            }
        }
    }
}


def getterraformPath(){
   def tfhome = tool name: 'terraform', type: 'org.jenkinsci.plugings.terraform.TerraformInstallation'
   return tfhome
}
